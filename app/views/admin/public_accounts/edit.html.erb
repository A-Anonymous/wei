
<form class="form-group" method="post" action="<%= admin_public_account_path(@account) %>">
  <input type="hidden" name="_method" value="put" />
  <%= render 'account' %>
</form>
<script>
    var editor = CodeMirror.fromTextArea(document.getElementById("json-template"), {
        lineNumbers: false,
        mode: "javascript",
        extraKeys: {
            "Esc": function(cm) {
                cm.setOption("fullScreen", !cm.getOption("fullScreen"));
            },
            "Tab": function(cm){
                cm.replaceSelection("  " , "end");
            }
        },
        tabSize: 2,
        indentWithTabs: false
    });
    editor.setSize('auto','800px');
</script>