<div class="panel panel-default" style="overflow: hidden">
  <div class="panel-heading">
    <h3 class="panel-title">绑定公众号</h3>
  </div>
  <div class="panel-body">
    <label>
      公众号名称：<input class="form-control" name="public_account[name]" value="<%= @account.name %>">
    </label>
    <label style="margin-left: 100px;">
      标识：<input class="form-control" name="public_account[account]" value="<%= @account.account %>">
    </label>
    <div class="divider"></div>
    <label>
      APPID：<input class="form-control" name="public_account[appid]" value="<%= @account.appid %>">
    </label>
    <label style="margin-left: 100px;">
      APP SECRET：<input class="form-control" name="public_account[appsecret]" value="<%= @account.appsecret %>">
    </label>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">菜单JSON</h3>
  </div>
  <div class="panel-body">
    <textarea name="public_account[menu_json]" id="json-template" title="模版"><%= @account.menu_json %></textarea>
  </div>

</div>
<button type="submit" class="btn btn-primary">提交</button>