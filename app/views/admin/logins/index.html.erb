  <label>
    <input name="account" class="form-control" type="text" placeholder="用户名">
  </label>
  <br/>
  <label>
    <input name="password" class="form-control" type="password" placeholder="密码">
  </label>
  <br/>
  <br/>
  <button class="btn btn-primary" type="submit" style="width: 200px;">提交</button>
</form>

