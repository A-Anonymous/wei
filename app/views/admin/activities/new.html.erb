
<form class="form-group" method="post" action="<%= admin_activities_path %>">
  <%= render 'activity' %>
</form>
<script>
    var editor = CodeMirror.fromTextArea(document.getElementById("ruby-template"), {
        lineNumbers: false,
        mode: "ruby",
        extraKeys: {
            "Esc": function(cm) {
                cm.setOption("fullScreen", !cm.getOption("fullScreen"));
            },
            "Tab": function(cm){
                cm.replaceSelection("  " , "end");
            }
        },
        tabSize: 2,
        indentWithTabs: false
    });
    editor.setSize('auto','800px');
</script>